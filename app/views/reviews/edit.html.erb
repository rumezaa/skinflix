<%= render "reviews" %>
<div class="flex flex-col justify-center items-center inset-0 fixed bg-black bg-opacity-50 h-screen">
    <div class="bg-white w-2/5 h-1/2">
        <%= react_component("forms/ReviewForm", {token: form_authenticity_token, product:@product, review:@review})%>
         <div class="flex items-center p-2 bg-red-600 w-12 rounded-md fixed bottom-3 right-3 ">
         <div
          class="w-10 h-10 bg-contain bg-no-repeat bg-center "
          style="background-image: url('/assets/trash_icon')"
        >
        
        <%= button_to "h", product_review_path(@product), method: "delete", class: "items-center h-full w-full text-white opacity-0" %>
          
        </div>
        </div>
      
    </div>
</div>