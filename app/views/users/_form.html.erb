

  <%= form_with(model: user, local: true, class: "#{form_length} border border-blueblue rounded-md p-10") do |f| %>

    <div
      class="flex flex-col gap-5 pt-6 pb-3 leading-tight"
    >

          <div class="fixed top-0 h-30 md:w-5/6 lg:w-2/3 xl:w-1/2 self-center">
        <% if user.errors.any? %>
          <section class="errors errors w-full h-full px-2 py-2 flex flex-col rounded bg-red-400 text-white ">
            <h2 class="text-base font-semibold py-2">
              Oops! Your form could not be saved.
            </h2>
            <h3 class="italic text-yellow-300 text-base">
              Please correct the following
              <%= pluralize(user.errors.size, "error") %>:
            </h3>
            <ul class="text-xs">
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </section>
        <% end %>
      </div>
      <div class="flex flex-col gap-5 md:flex-row md:gap-0 justify-between">
        <div class="border-b-2 border-blueblue px-3">
          <div class="flex flex-col gap-1">
            <% if user.new_record? %>
              <%= f.label :username %>
            <% else %>
              <%= f.label :username, "Update Username", class: "text-xs" %>
            <% end %>
            <%= f.text_field :username, autofocus: true, class: "outline-none" %>
          </div>
        </div>

        <div class="border-b-2 border-blueblue bg-white px-3">
          <div class="flex flex-col gap-1">
            <%= f.label :name, class: "text-xs" %>
            <%= f.text_field :name, class: "outline-none" %>
          </div>
        </div>
      </div>

      <div class="border-b-2 border-blueblue bg-white px-3">
        <div class="flex flex-col gap-1">
          <%= f.label :email, class: "text-xs" %>
          <%= f.email_field :email, class: "outline-none" %>
        </div>
      </div>

      <div class="border-b-2 border-blueblue bg-white px-3">
        <div class="flex flex-col gap-1">
          <% if user.new_record? %>
            <%= f.label :password, class: "text-xs" %>
          <% else %>
            <%= f.label :password, "Update Password", class: "text-xs " %>
          <% end %>
          <%= f.password_field :password, class: "outline-none auth" %>
        </div>
      </div>

      <div class="border-b-2 border-blueblue bg-white px-3">

        <div class="flex flex-col gap-1">

          <%= f.label :password_confirmation, "Confirm Password", class: "text-xs" %>
          <%= f.password_field :password_confirmation, class: "outline-none" %>
        </div>

      </div>

       
        </div>
        <% if user.new_record? %>
        <div class="flex flex-col items-center justify-center py-4 gap-8 rounded">
          <%= f.submit "Create Account", class:"w-40 rounded-full text-white font-semibold bg-gradient-to-r from-grape to-blueblue py-3" %>
          <h2 class="text-sm">Already have an account? <span><%= link_to "Login", signin_path, class:"text-happy-orange font-semibold"%></span></h2>
        <% else %>
        <div class="flex flex-col items-center">
          <%= f.submit "Update Account", class: "w-40 rounded-full text-white font-semibold bg-gradient-to-r from-grape to-blueblue py-3" %>
        <% end %>
       </div>

  <% end %>


