<%= render "layouts/main" %>

<div
  class="
    flex
    flex-col
    justify-center
    items-center
    inset-0
    fixed
    bg-black
    bg-opacity-50
    h-screen
  "
>
  <div class="bg-white w-11/12 md:w-5/6 lg:w-4/6 xl:w-1/2 xl:h-4/5 py-10">
    <div class="px-10 flex flex-row justify-between pb-6">
      <h2 class="text-xl text-center">Create an Account</h2>
      <%= link_to "X", root_path %>
    </div>
    <div class="flex flex-row items-left px-5 md:px-16">
      <%= render 'form', user:@user, form_length: "w-full" %>
    </div>
  </div>
</div>
