<div class="flex flex-col md:p-6">

  <div class="flex flex-row items-center">
  <%= react_component("icons", {icon: "account", width: 40, height: 40})%>

  <div class="flex flex-col gap-1">
  <h2 class="pl-1 text-grape">username: <span class="text-black"><%= @user.username%></span></h2>
  <h2 class="pl-1 text-grape">name: <span class="text-black"><%= @user.name%></span></h2>
  <div class="flex flex-row items-center"><%= react_component("icons", {width: 10, height: 10})%> <span><h2><%= mail_to(@user.email) %></h2></span></div>

 <% if current_user?(@user) %>
      <div class="pl-1"><%= button_to "Delete Account", user_path(@user),  class: "rounded-full bg-red-400 px-10 py-1 text-white font-semibold hover:bg-white border-2 border-red-400 hover:text-red-400", method: :delete, confirm:"Are you sure? " %></div>
  <% end %> 
  </div>

  </div>
    
</div>
  

  
<%= render "layouts/user_dashboard", user: @user, selectFavs: true, selectHistory: false, selectSettings: false %>
<% if current_user?(@user) %>
<%= react_component("user_dashboard/SavedProducts", {products: @fav_products, favourites: @fav_products})%>
<%end%>
