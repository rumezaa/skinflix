<% if object.errors.any? %>
  <section class="errors errors w-64 md:w-11/12 lg:w-1/3 h-full mb-10 rounded bg-red-400 px-10 py-10 text-white">
    <h2 class="text-2xl font-semibold py-3">
      Oops! Your form could not be saved.
    </h2>
    <h3 class="italic text-yellow-300">
      Please correct the following
      <%= pluralize(object.errors.size, "error") %>:
    </h3>
    <ul class="px-10">
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>