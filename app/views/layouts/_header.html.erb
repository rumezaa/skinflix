<header
  class="
    flex
    flex-row
    justify-between
    pr-3
    md:px-10
    py-3
    md:px-20
    md:py-4
    border
    pl-6
    border-2
  "
>

  <div
    class="w-10 h-10 md:w-12 md:h-12 bg-cover"
    style="background-image: url('/assets/logo')"
  >
    <%= link_to "All Products", products_path, class: "opacity-0" %>
  </div>

  <div class="flex flex-row gap-2 md:gap-4 items-center ">
    <% if current_user %>
      <div class="block md:hidden ">
        <%= react_component("icons", {icon:"account", link: user_path(current_user), width:10, height:10 }) %>
      </div>

      <div class="hidden md:block">
        <%= link_to current_user.name, current_user, class: "text-center h-10 w-16 px-5 py-3 rounded-full text-grape font-semibold border border-grape " %>
      </div>
      <div
        style="background-image: url('assets/logout_icon')"
        class="block md:hidden bg-cover bg-no-repeat w-10 h-10 "
      >
        <%= button_to "Sign out", session_path, method: :delete, class: "opacity-0" %>
      </div>

      <div class="hidden md:block">
        <%= button_to "Sign out", session_path, method: :delete, class: "text-center h-10 w-16 py-2 md:h-auto text-xs bg-blueblue md:text-base md:w-auto md:px-5 md:py-3 rounded-full text-white font-semibold border-2 border-blueblue hover:text-blueblue hover:bg-white" %>
      </div>

    <% else %>
      <%= link_to "Sign In", signin_path, class: "text-center h-10 w-16 py-2 md:h-auto text-xs bg-blueblue md:text-base md:w-auto md:px-5 md:py-3 rounded-full text-white font-semibold border-2 border-blueblue hover:text-blueblue hover:bg-white" %>
      <%= link_to "Sign Up", signup_path, class: "text-center h-10 w-16 py-2 md:h-auto text-xs bg-happy-orange md:text-base md:w-auto md:px-5 md:py-3 rounded-full text-white font-semibold border-2 border-happy-orange hover:text-happy-orange hover:bg-white" %>

    <% end %>
  </div>

</header>
